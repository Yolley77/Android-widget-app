<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".InputDialog" android:background="@android:color/background_dark" android:orientation="vertical">

    <TextView
            android:text="Выбрать дату"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/selectDate"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:textColor="@android:color/background_light" android:textSize="24sp" android:textAllCaps="false"
            android:lineSpacingExtra="8sp" android:textAlignment="center" android:onClick="onDialogClick"
            android:background="@android:color/background_dark"/>
    <Button
            android:text="Установить выбранную дату"
            android:layout_width="394dp"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:background="@android:color/background_dark" android:textColor="@android:color/background_light"
            android:textSize="14sp" android:onClick="onSetClick"/>
</LinearLayout>